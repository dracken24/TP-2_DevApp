<Page x:Class="TP_2_Developpement_Application_Burreau.Pages.AProposPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="À propos">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="600"/>
        </Grid.RowDefinitions>

        <!-- En-tête de la page -->
        <Border Grid.Row="0" Background="#6F42C1" Padding="30,20">
            <StackPanel>
                <TextBlock Text="ℹ️ À propos" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Informations sur l'application" 
                           FontSize="16" 
                           Foreground="#E0E0E0"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenu principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                
                <!-- Logo et titre -->
                <Border Background="#F8F9FA" CornerRadius="12" Padding="40">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="🏢" FontSize="80" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Application Bureau" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Version 1.0.0" 
                                   FontSize="16" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Description -->
                <Border Background="#F8F9FA" CornerRadius="12" Padding="30" Margin="0,25,0,0">
                    <StackPanel>
                        <TextBlock Text="Description" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="Cette application WPF démontre l'utilisation des technologies modernes de développement d'applications de bureau. Elle présente une interface utilisateur intuitive avec navigation entre pages, design responsive et fonctionnalités interactives."
                                   FontSize="16" 
                                   Foreground="#666666"
                                   TextWrapping="Wrap"
                                   LineHeight="24"/>
                    </StackPanel>
                </Border>

                <!-- Technologies utilisées -->
                <Border Background="#F8F9FA" CornerRadius="12" Padding="30" Margin="0,25,0,0">
                    <StackPanel>
                        <TextBlock Text="Technologies utilisées" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,20"/>

                                                 <Grid>
                             <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="200"/>
                                 <ColumnDefinition Width="200"/>
                             </Grid.ColumnDefinitions>

                            <!-- Colonne 1 -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="🔷 WPF (Windows Presentation Foundation)" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="🔷 C# (.NET Framework)" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="🔷 XAML" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                            </StackPanel>

                            <!-- Colonne 2 -->
                            <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                <TextBlock Text="🔷 MVVM Pattern" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="🔷 Navigation Framework" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="🔷 Data Binding" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="#333333"
                                           Margin="0,0,0,8"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Fonctionnalités principales -->
                <Border Background="#F8F9FA" CornerRadius="12" Padding="30" Margin="0,25,0,0">
                    <StackPanel>
                        <TextBlock Text="Fonctionnalités principales" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="✅ Navigation fluide entre les pages&#x0a;✅ Interface utilisateur moderne et responsive&#x0a;✅ Gestion des paramètres avec persistance&#x0a;✅ Design adaptatif et accessible&#x0a;✅ Animations et transitions fluides&#x0a;✅ Gestion des événements et interactions"
                                   FontSize="14" 
                                   Foreground="#666666"
                                   TextWrapping="Wrap"
                                   LineHeight="20"/>
                    </StackPanel>
                </Border>

                <!-- Informations de contact -->
                <Border Background="#E8F4FD" CornerRadius="12" Padding="30" Margin="0,25,0,0">
                    <StackPanel>
                        <TextBlock Text="📞 Contact" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#007ACC"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="Pour toute question ou suggestion concernant cette application, n'hésitez pas à nous contacter."
                                   FontSize="16" 
                                   Foreground="#333333"
                                   TextWrapping="Wrap"
                                   LineHeight="24"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="📧 Email: contact@application-bureau.com&#x0a;🌐 Site web: www.application-bureau.com&#x0a;📱 Support: +33 1 23 45 67 89"
                                   FontSize="14" 
                                   Foreground="#666666"
                                   TextWrapping="Wrap"
                                   LineHeight="20"/>
                    </StackPanel>
                </Border>

                <!-- Copyright -->
                <Border Background="#F8F9FA" CornerRadius="12" Padding="30" Margin="0,25,0,0">
                    <StackPanel>
                        <TextBlock Text="© 2024 Application Bureau. Tous droits réservés." 
                                   FontSize="14" 
                                   Foreground="#888888"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Développé avec ❤️ pour l'apprentissage de WPF" 
                                   FontSize="12" 
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
