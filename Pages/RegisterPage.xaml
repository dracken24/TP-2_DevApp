<Page x:Class="TP_2_Developpement_Application_Burreau.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Inscription">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="600"/>
        </Grid.RowDefinitions>

        <!-- En-tête de la page -->
        <Border Grid.Row="0" Background="#28A745" Padding="30,20">
            <StackPanel>
                <TextBlock Text="📝 Inscription" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Créez votre compte utilisateur" 
                           FontSize="16" 
                           Foreground="#E0E0E0"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Formulaire d'inscription -->
            <Border Grid.Column="0" Background="#F8F9FA" Margin="20,20,10,20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="40">
                        <TextBlock Text="Créer un compte" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,30"
                                   HorizontalAlignment="Center"/>

                        <!-- Nom d'utilisateur -->
                        <TextBlock Text="Nom d'utilisateur *" 
                                   FontSize="14" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtUsername" 
                                 Height="40" 
                                 Margin="0,0,0,20"
                                 FontSize="14"
                                 Padding="10,5"/>

                        <!-- Email -->
                        <TextBlock Text="Email *" 
                                   FontSize="14" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtEmail" 
                                 Height="40" 
                                 Margin="0,0,0,20"
                                 FontSize="14"
                                 Padding="10,5"/>

                        <!-- Mot de passe -->
                        <TextBlock Text="Mot de passe *" 
                                   FontSize="14" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,5"/>
                        <PasswordBox x:Name="txtPassword" 
                                     Height="40" 
                                     Margin="0,0,0,20"
                                     FontSize="14"
                                     Padding="10,5"/>

                        <!-- Confirmation du mot de passe -->
                        <TextBlock Text="Confirmer le mot de passe *" 
                                   FontSize="14" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,5"/>
                        <PasswordBox x:Name="txtConfirmPassword" 
                                     Height="40" 
                                     Margin="0,0,0,20"
                                     FontSize="14"
                                     Padding="10,5"/>

                        <!-- Prénom -->
                        <TextBlock Text="Prénom" 
                                   FontSize="14" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPrenom" 
                                 Height="40" 
                                 Margin="0,0,0,20"
                                 FontSize="14"
                                 Padding="10,5"/>

                        <!-- Nom -->
                        <TextBlock Text="Nom" 
                                   FontSize="14" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNom" 
                                 Height="40" 
                                 Margin="0,0,0,20"
                                 FontSize="14"
                                 Padding="10,5"/>

                        <!-- Téléphone -->
                        <TextBlock Text="Téléphone" 
                                   FontSize="14" 
                                   FontWeight="Medium" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTelephone" 
                                 Height="40" 
                                 Margin="0,0,0,30"
                                 FontSize="14"
                                 Padding="10,5"/>

                        <!-- Bouton d'inscription -->
                        <Button x:Name="btnRegister" 
                                Content="Créer le compte" 
                                Background="#28A745" 
                                Foreground="White" 
                                Padding="20,12" 
                                FontSize="16"
                                FontWeight="Medium"
                                BorderThickness="0"
                                Click="btnRegister_Click"/>

                        <!-- Lien vers la connexion -->
                        <TextBlock Text="Déjà un compte ?" 
                                   FontSize="14" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,5"/>
                        <Button x:Name="btnGoToLogin" 
                                Content="Se connecter" 
                                Background="Transparent" 
                                Foreground="#28A745" 
                                BorderThickness="0"
                                FontSize="14"
                                Click="btnGoToLogin_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Informations -->
            <Border Grid.Column="1" Background="#E8F5E8" Margin="10,20,20,20">
                <StackPanel Margin="40" VerticalAlignment="Center">
                    <TextBlock Text="🎉 Rejoignez-nous" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#28A745"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Créez votre compte pour commencer à gérer vos rendez-vous de manière efficace et organisée."
                               FontSize="16" 
                               Foreground="#333333"
                               TextWrapping="Wrap"
                               LineHeight="24"
                               Margin="0,0,0,20"
                               TextAlignment="Center"/>

                    <TextBlock Text="🚀 Avantages de l'inscription :&#x0a;&#x0a;✅ Accès à votre espace personnel&#x0a;✅ Gestion complète de vos rendez-vous&#x0a;✅ Calendrier personnalisé&#x0a;✅ Statistiques détaillées&#x0a;✅ Sauvegarde sécurisée de vos données"
                               FontSize="14" 
                               Foreground="#666666"
                               TextWrapping="Wrap"
                               LineHeight="20"
                               TextAlignment="Left"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
