<Page x:Class="TP_2.Pages.CalendrierPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 

	mc:Ignorable="d" 
	d:DesignHeight="600" d:DesignWidth="800"
	Title="Calendrier">

	<Grid Background="White">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- En-tÃªte de la page -->
		<Border Grid.Row="0" Background="#17A2B8" Padding="30,20">
			<StackPanel>
				<TextBlock Text="ðŸ“… Calendrier" 
							FontSize="32" 
							FontWeight="Bold" 
							Foreground="White"
							HorizontalAlignment="Center"/>
				<TextBlock Text="GÃ©rez vos rendez-vous et Ã©vÃ©nements" 
							FontSize="16" 
							Foreground="#E0E0E0"
							HorizontalAlignment="Center"
							Margin="0,10,0,0"/>
			</StackPanel>
		</Border>

		<!-- Contenu principal -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="350" MinWidth="300"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Calendrier -->
			<Border Grid.Column="0" Background="#F8F9FA" Margin="20,20,10,20">
				<StackPanel Margin="20">
					<TextBlock Text="Calendrier" 
								FontSize="20" 
								FontWeight="Bold" 
								Foreground="#333333"
								Margin="0,0,0,20"
								HorizontalAlignment="Center"/>

					<!-- Navigation du calendrier -->
					<StackPanel Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
						<Button x:Name="btnPrevMonth" 
								Content="â—€" 
								Width="40" 
								Height="30" 
								Margin="5,0"
								Click="btnPrevMonth_Click"/>
						<TextBlock x:Name="txtCurrentMonth" 
									Text="Janvier 2024" 
									FontSize="16" 
									FontWeight="Bold" 
									VerticalAlignment="Center" 
									Margin="15,0"/>
						<Button x:Name="btnNextMonth" 
								Content="â–¶" 
								Width="40" 
								Height="30" 
								Margin="5,0"
								Click="btnNextMonth_Click"/>
					</StackPanel>

					<!-- Calendrier personnalisÃ© -->
					<Border Background="White" 
							BorderBrush="#E0E0E0" 
							BorderThickness="1" 
							CornerRadius="8"
							Padding="15"
							HorizontalAlignment="Center"
							MinWidth="280" MinHeight="250"
							MaxWidth="400">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/> <!-- En-tÃªtes des jours -->
								<RowDefinition Height="*"/>    <!-- Grille des jours -->
							</Grid.RowDefinitions>

							<!-- En-tÃªtes des jours de la semaine -->
							<Grid Grid.Row="0" Margin="0,0,0,10">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								
								<TextBlock Grid.Column="0" Text="Dim" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#666666"/>
								<TextBlock Grid.Column="1" Text="Lun" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#666666"/>
								<TextBlock Grid.Column="2" Text="Mar" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#666666"/>
								<TextBlock Grid.Column="3" Text="Mer" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#666666"/>
								<TextBlock Grid.Column="4" Text="Jeu" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#666666"/>
								<TextBlock Grid.Column="5" Text="Ven" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#666666"/>
								<TextBlock Grid.Column="6" Text="Sam" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#666666"/>
							</Grid>

							<!-- Grille des jours -->
							<UniformGrid Grid.Row="1" Rows="6" Columns="7" x:Name="CalendarGrid">
								<!-- Les boutons des jours seront gÃ©nÃ©rÃ©s dynamiquement -->
							</UniformGrid>
						</Grid>
					</Border>

					<!-- Bouton pour ajouter un rendez-vous -->
					<Button x:Name="btnAddRendezVous" 
							Content="âž• Nouveau rendez-vous" 
							Background="#17A2B8" 
							Foreground="White" 
							Padding="15,10" 
							Margin="0,20,0,0"
							BorderThickness="0"
							Click="btnAddRendezVous_Click"/>
				</StackPanel>
			</Border>

			<!-- Liste des rendez-vous -->
			<Border Grid.Column="1" Background="#F8F9FA" Margin="10,20,20,20">
				<Grid Margin="20">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/> <!-- Titre -->
						<RowDefinition Height="*"/>    <!-- Liste des rendez-vous -->
						<RowDefinition Height="Auto"/> <!-- Statistiques -->
					</Grid.RowDefinitions>

					<TextBlock Grid.Row="0" 
								Text="Rendez-vous du jour" 
								FontSize="20" 
								FontWeight="Bold" 
								Foreground="#333333"
								Margin="0,0,0,20"/>

					<!-- Liste des rendez-vous -->
					<ScrollViewer Grid.Row="1" 
									VerticalScrollBarVisibility="Auto" 
									HorizontalScrollBarVisibility="Auto"
									MinHeight="300">
						<StackPanel x:Name="RendezVousList">
							<!-- Les rendez-vous seront ajoutÃ©s ici dynamiquement -->
						</StackPanel>
					</ScrollViewer>

					<!-- Statistiques -->
					<Border Grid.Row="2" 
							Background="White" 
							CornerRadius="8" 
							Padding="15" 
							Margin="0,20,0,0">
						<StackPanel>
							<TextBlock Text="ðŸ“Š Statistiques" 
										FontSize="16" 
										FontWeight="Bold" 
										Foreground="#333333"
										Margin="0,0,0,10"/>
							<TextBlock x:Name="txtStats" 
										Text="Aucun rendez-vous aujourd'hui" 
										FontSize="14" 
										Foreground="#666666"/>
						</StackPanel>
					</Border>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</Page>
