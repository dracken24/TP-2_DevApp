<Page x:Class="TP_2_Developpement_Application_Burreau.Pages.FonctionnalitesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Fonctionnalités">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="600"/>
        </Grid.RowDefinitions>

        <!-- En-tête de la page -->
        <Border Grid.Row="0" Background="#28A745" Padding="30,20">
            <StackPanel>
                <TextBlock Text="⚙️ Fonctionnalités" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Découvrez toutes les fonctionnalités disponibles" 
                           FontSize="16" 
                           Foreground="#E0E0E0"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Contenu principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                
                <!-- Liste des fonctionnalités -->
                <TextBlock Text="Fonctionnalités disponibles" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333333"
                           Margin="0,0,0,20"/>

                                 <!-- Fonctionnalité 1 -->
                 <Border Background="#F8F9FA" CornerRadius="12" Padding="25">
                     <Grid>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="Auto"/>
                             <ColumnDefinition Width="300"/>
                         </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="📊" FontSize="40" VerticalAlignment="Top" Margin="0,0,20,0"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Analyse de données" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#333333"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Visualisez et analysez vos données avec des graphiques interactifs et des tableaux de bord personnalisables."
                                       FontSize="14" 
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       LineHeight="20"/>
                        </StackPanel>
                    </Grid>
                </Border>

                                 <!-- Fonctionnalité 2 -->
                 <Border Background="#F8F9FA" CornerRadius="12" Padding="25">
                     <Grid>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="Auto"/>
                             <ColumnDefinition Width="300"/>
                         </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="📁" FontSize="40" VerticalAlignment="Top" Margin="0,0,20,0"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Gestion de fichiers" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#333333"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Organisez et gérez vos fichiers de manière efficace avec un système de catégorisation avancé."
                                       FontSize="14" 
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       LineHeight="20"/>
                        </StackPanel>
                    </Grid>
                </Border>

                                 <!-- Fonctionnalité 3 -->
                 <Border Background="#F8F9FA" CornerRadius="12" Padding="25">
                     <Grid>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="Auto"/>
                             <ColumnDefinition Width="300"/>
                         </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🔔" FontSize="40" VerticalAlignment="Top" Margin="0,0,20,0"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Notifications" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#333333"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Recevez des notifications en temps réel pour rester informé des événements importants."
                                       FontSize="14" 
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       LineHeight="20"/>
                        </StackPanel>
                    </Grid>
                </Border>

                                 <!-- Fonctionnalité 4 -->
                 <Border Background="#F8F9FA" CornerRadius="12" Padding="25">
                     <Grid>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="Auto"/>
                             <ColumnDefinition Width="300"/>
                         </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="🔄" FontSize="40" VerticalAlignment="Top" Margin="0,0,20,0"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Synchronisation" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#333333"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Synchronisez vos données entre différents appareils et sauvegardez automatiquement vos modifications."
                                       FontSize="14" 
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       LineHeight="20"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Section d'information -->
                <Border Background="#E8F5E8" CornerRadius="12" Padding="30" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="💡 Conseil" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#28A745"
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="Chaque fonctionnalité peut être configurée selon vos besoins dans la section Paramètres. N'hésitez pas à explorer les différentes options disponibles."
                                   FontSize="16" 
                                   Foreground="#333333"
                                   TextWrapping="Wrap"
                                   LineHeight="24"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
