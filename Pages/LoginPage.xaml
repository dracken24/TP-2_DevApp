            </Grid.ColumnDefinitions>

            <!-- Formulaire de connexion -->
            <Border Grid.Column="0" Background="#F8F9FA" Margin="20,20,10,20">
                <StackPanel Margin="40" VerticalAlignment="Center">
                    <TextBlock Text="Connexion" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#333333"
                               Margin="0,0,0,30"
                               HorizontalAlignment="Center"/>

                    <!-- Nom d'utilisateur -->
                    <TextBlock Text="Nom d'utilisateur" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsername" 
                             Height="40" 
                             Margin="0,0,0,20"
                             FontSize="14"
                             Padding="10,5"/>

                    <!-- Mot de passe -->
                    <TextBlock Text="Mot de passe" 
                               FontSize="14" 
                               FontWeight="Medium" 
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Height="40" 
                                 Margin="0,0,0,30"
                                 FontSize="14"
                                 Padding="10,5"/>

                    <!-- Bouton de connexion -->
                    <Button x:Name="btnLogin" 
                            Content="Se connecter" 
                            Background="#007ACC" 
                            Foreground="White" 
                            Padding="20,12" 
                            FontSize="16"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Click="btnLogin_Click"/>

                    <!-- Lien vers l'inscription -->
                    <TextBlock Text="Pas encore de compte ?" 
                               FontSize="14" 
                               Foreground="#666666"
