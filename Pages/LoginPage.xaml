<Page x:Class="TP_2.Pages.LoginPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	mc:Ignorable="d" 
	d:DesignHeight="600" d:DesignWidth="800"
	Title="Connexion">

	<Grid Background="White">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="600"/>
		</Grid.RowDefinitions>

		<!-- En-tête de la page -->
		<Border Grid.Row="0" Background="#007ACC" Padding="30,20">
			<StackPanel>
				
				<TextBlock Text="🔐 Connexion" 
							FontSize="32" 
							FontWeight="Bold" 
							Foreground="White"
							HorizontalAlignment="Center"/>
							
				<TextBlock Text="Connectez-vous à votre compte" 
							FontSize="16" 
							Foreground="#E0E0E0"
							HorizontalAlignment="Center"
							Margin="0,10,0,0"/>
							
			</StackPanel>
		</Border>

		<!-- Contenu principal -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="400"/>
				<ColumnDefinition Width="400"/>
			</Grid.ColumnDefinitions>

			<!-- Formulaire de connexion -->
			<Border Grid.Column="0" Background="#F8F9FA" Margin="20,20,10,20">
				<StackPanel Margin="40" VerticalAlignment="Center">
					
					<TextBlock Text="Connexion" 
								FontSize="24" 
								FontWeight="Bold" 
								Foreground="#333333"
								Margin="0,0,0,30"
								HorizontalAlignment="Center"/>

					<!-- Nom d'utilisateur -->
					<TextBlock Text="Nom d'utilisateur" 
								FontSize="14" 
								FontWeight="Medium" 
								Margin="0,0,0,5"/>
								
					<TextBox x:Name="txtUsername" 
								Height="40" 
								Margin="0,0,0,20"
								FontSize="14"
								Padding="10,5"/>

					<!-- Mot de passe -->
					<TextBlock Text="Mot de passe" 
								FontSize="14" 
								FontWeight="Medium" 
								Margin="0,0,0,5"/>
								
					<PasswordBox x:Name="txtPassword" 
									Height="40" 
									Margin="0,0,0,30"
									FontSize="14"
									Padding="10,5"/>

					<!-- Bouton de connexion -->
					<Button x:Name="btnLogin" 
							Content="Se connecter" 
							Background="#007ACC" 
							Foreground="White" 
							Padding="20,12" 
							FontSize="16"
							FontWeight="Medium"
							BorderThickness="0"
							Click="btnLogin_Click"/>

					<!-- Lien vers l'inscription -->
					<TextBlock Text="Pas encore de compte ?" 
								FontSize="14" 
								Foreground="#666666"
								HorizontalAlignment="Center"
								Margin="0,20,0,5"/>
								
					<Button x:Name="btnGoToRegister" 
							Content="Créer un compte" 
							Background="Transparent" 
							Foreground="#007ACC" 
							BorderThickness="0"
							FontSize="14"
							Click="btnGoToRegister_Click"/>
							
				</StackPanel>
			</Border>

			<!-- Informations -->
			<Border Grid.Column="1" Background="#E8F4FD" Margin="10,20,20,20">
				<StackPanel Margin="40" VerticalAlignment="Center">
					<TextBlock Text="💡 Bienvenue" 
								FontSize="24" 
								FontWeight="Bold" 
								Foreground="#007ACC"
								Margin="0,0,0,20"
								HorizontalAlignment="Center"/>

					<TextBlock Text="Connectez-vous pour accéder à votre espace personnel et gérer vos rendez-vous."
								FontSize="16" 
								Foreground="#333333"
								TextWrapping="Wrap"
								LineHeight="24"
								Margin="0,0,0,20"
								TextAlignment="Center"/>

					<TextBlock Text="✅ Gérez vos rendez-vous&#x0a;✅ Consultez votre calendrier&#x0a;✅ Modifiez vos informations&#x0a;✅ Accédez à vos statistiques"
								FontSize="14" 
								Foreground="#666666"
								TextWrapping="Wrap"
								LineHeight="20"
								TextAlignment="Center"/>
				</StackPanel>
			</Border>
		</Grid>
	</Grid>
</Page>
