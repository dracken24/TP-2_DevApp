<Window x:Class="TP_2.Dialogs.RendezVousDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Gestion de rendez-vous" 
		Height="500" 
		Width="400"
		WindowStartupLocation="CenterOwner"
		ResizeMode="NoResize">
	
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- En-tÃªte -->
		<TextBlock Grid.Row="0" 
			Text="ðŸ“… Nouveau rendez-vous" 
			FontSize="20" 
			FontWeight="Bold" 
			Foreground="#17A2B8"
			Margin="0,0,0,20"
			HorizontalAlignment="Center"/>

		<!-- Formulaire -->
		<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
			<StackPanel>
				<!-- Titre -->
				<TextBlock Text="Titre *" 
							FontSize="14" 
							FontWeight="Medium" 
							Margin="0,0,0,5"/>

				<TextBox x:Name="txtTitre" 
							Height="30" 
							Margin="0,0,0,15"
							FontSize="14"/>

				<!-- Description -->
				<TextBlock Text="Description" 
							FontSize="14" 
							FontWeight="Medium" 
							Margin="0,0,0,5"/>
							
				<TextBox x:Name="txtDescription" 
							Height="60" 
							Margin="0,0,0,15"
							FontSize="14"
							TextWrapping="Wrap"
							AcceptsReturn="True"
							VerticalScrollBarVisibility="Auto"/>

				<!-- Date de dÃ©but -->
				<TextBlock Text="Date de dÃ©but *" 
							FontSize="14" 
							FontWeight="Medium" 
							Margin="0,0,0,5"/>
							
				<DatePicker x:Name="dpDateDebut" 
							Height="30" 
							Margin="0,0,0,15"
							FontSize="14"/>

				<!-- Heure de dÃ©but -->
				<TextBlock Text="Heure de dÃ©but *" 
							FontSize="14" 
							FontWeight="Medium" 
							Margin="0,0,0,5"/>
							
				<StackPanel Orientation="Horizontal" Margin="0,0,0,15">
					
					<ComboBox x:Name="cmbHeureDebut" 
								Width="80" 
								Height="30" 
								Margin="0,0,10,0"
								FontSize="14"/>
								
					<TextBlock Text=":" 
								FontSize="16" 
								VerticalAlignment="Center" 
								Margin="0,0,10,0"/>
								
					<ComboBox x:Name="cmbMinuteDebut" 
								Width="80" 
								Height="30" 
								FontSize="14"/>
								
				</StackPanel>

				<!-- Date de fin -->
				<TextBlock Text="Date de fin *" 
							FontSize="14" 
							FontWeight="Medium" 
							Margin="0,0,0,5"/>

				<DatePicker x:Name="dpDateFin" 
							Height="30" 
							Margin="0,0,0,15"
							FontSize="14"/>

				<!-- Heure de fin -->
				<TextBlock Text="Heure de fin *" 
							FontSize="14" 
							FontWeight="Medium" 
							Margin="0,0,0,5"/>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,15">
					
					<ComboBox x:Name="cmbHeureFin" 
								Width="80" 
								Height="30" 
								Margin="0,0,10,0"
								FontSize="14"/>
								
					<TextBlock Text=":" 
								FontSize="16" 
								VerticalAlignment="Center" 
								Margin="0,0,10,0"/>

					<ComboBox x:Name="cmbMinuteFin" 
								Width="80" 
								Height="30" 
								FontSize="14"/>
				</StackPanel>

				<!-- Lieu -->
				<TextBlock Text="Lieu" 
							FontSize="14" 
							FontWeight="Medium" 
							Margin="0,0,0,5"/>

				<TextBox x:Name="txtLieu" 
							Height="30" 
							Margin="0,0,0,15"
							FontSize="14"/>

				<!-- Client -->
				<TextBlock Text="Client" 
							FontSize="14" 
							FontWeight="Medium" 
							Margin="0,0,0,5"/>
							
				<TextBox x:Name="txtClient" 
							Height="30" 
							Margin="0,0,0,15"
							FontSize="14"/>

				<!-- Statut -->
				<TextBlock Text="Statut" 
							FontSize="14" 
							FontWeight="Medium" 
							Margin="0,0,0,5"/>
							
				<ComboBox x:Name="cmbStatut" 
							Height="30" 
							Margin="0,0,0,15"
							FontSize="14">
							
					<ComboBoxItem Content="ConfirmÃ©" IsSelected="True"/>
					<ComboBoxItem Content="En attente"/>
					<ComboBoxItem Content="AnnulÃ©"/>
					
				</ComboBox>
			</StackPanel>
		</ScrollViewer>

		<!-- Boutons -->
		<StackPanel Grid.Row="2" 
					Orientation="Horizontal" 
					HorizontalAlignment="Right" 
					Margin="0,20,0,0">
			<Button x:Name="btnAnnuler" 
					Content="Annuler" 
					Width="80" 
					Height="35" 
					Margin="0,0,10,0"
					Background="#6C757D" 
					Foreground="White"
					BorderThickness="0"
					Click="btnAnnuler_Click"/>
			<Button x:Name="btnEnregistrer" 
					Content="Enregistrer" 
					Width="100" 
					Height="35"
					Background="#17A2B8" 
					Foreground="White"
					BorderThickness="0"
					Click="btnEnregistrer_Click"/>
		</StackPanel>
	</Grid>
</Window>
